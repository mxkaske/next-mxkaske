{
  "name": "mxkaske-turbo",
  "version": "1.0.0",
  "author": "Maximilian Kaske",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "tsc": "turbo run tsc",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "clean": "turbo run clean && rm -rf node_modules && rm -rf .turbo"
  },
  "devDependencies": {
    "prettier": "^2.5.1",
    "turbo": "latest"
  }
}
